- unless user_signed_in?
  %section#register.row
    = simple_form_for User.new, url: registration_path(User) do |f|
      .col-sm-4.col-sm-offset-4
        = f.input :email, :required => true, :autofocus => true, label: false
        = f.submit class: 'btn btn-success', data: { :'disable-with' => t('loading') }
