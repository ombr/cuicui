.col-xs-12
  .row
    .col-md-5
      %h1= t('.edit')
      = simple_form_for @site,  html: { class: 'warn-on-exit form-horizontal' }, wrapper: :horizontal_form do |f|
        = f.input :title, input_html: {class: 'input-lg'}
        = f.input :description, as: :text, input_html: { rows: 10 }
        = f.input :language, collection: LanguageList::COMMON_LANGUAGES.map{|l| [l.name, l.iso_639_1]}, prompt: false
        = f.input :twitter_id
        = f.input :facebook_id
        = f.input :facebook_app_id
        = f.input :google_plus_id
        = f.input :google_analytics_id
        .admin-advanced
          = f.input :metas, as: :text, input_html: { rows: 4 }
          = f.input :favicon, as: :file
          .alert.alert-warning
            = t '.warning', default: 'It can take some time before the favicon gets updated...'
          = f.input :css, input_html: { rows: 30}
        = f.submit class: 'btn btn-primary'
    .col-md-7
      %h1= t('.pages')
      %ul
        - @site.pages.each do |page|
          %li
            = link_to page.name, edit_page_path(page)
  .row
    .col-md-12
      %h1= t('.delete')
      .alert.alert-danger
        = t('.danger_zone')
        %br
        = link_to site_path(@site), method: :delete,  class: 'btn btn-danger', data: { confirm: t('confirm') } do
          .fa.fa-trash-o
          = t('.delete')
-#.col-md-4
  %h1 Usage
  %h3 Storage
  =progress(Cloudinary::Api.usage["storage"]["used_percent"])
  /
    %h3 Bandwith
    =progress(Cloudinary::Api.usage["bandwidth"]["used_percent"])
-#.col-md-4
  %h1 Account
  = simple_form_for(@current_user, url: user_registration_path, html: { :method => :put }) do |f|
    = f.error_notification
    .form-inputs
      = f.input :password, autocomplete: 'off', required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, hint: 'we need your current password to confirm your changes', required: true
    .form-actions
      = f.button :submit, 'Update', class: 'btn btn-primary'
