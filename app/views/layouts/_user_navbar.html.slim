nav#nav.navbar.navbar-inverse role="navigation"
  .container-fluid
    .navbar-header
      = link_to user_signed_in? ? user_path(id: current_user) : root_path, class: 'navbar-brand' do
        = t('brand')
      button.navbar-toggle data-target='#bs-example-navbar-collapse-1' data-toggle='collapse' type='button'
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        - if user_signed_in?
        - if site and not site.new_record?
          - site.pages.each do |page|
            - unless page.new_record?
              = tab_link edit_site_page_path(id: page, site_id: site) do
                = page.name
          = tab_link new_site_page_path(site_id: site) do
            .fa.fa-plus
      ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          = tab_link edit_user_registration_path(id: current_user) do
            = current_user.email
          li
            = link_to destroy_user_session_path do
              .fa.fa-sign-out
              = t 'sign_out'
        - else
          = tab_link new_user_session_path do
            = t 'sign_in'
          = tab_link new_user_registration_path, class: 'register' do
            = t 'register'
      - if user_signed_in?
        - if site and not site.new_record?
          = link_to preview_link, target: '_blank', title: t('.see'), class: 'pull-right btn btn-success navbar-btn' do
            = t '.see'
      - else
