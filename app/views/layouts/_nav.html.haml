- if site
  %nav#nav.nojs
    %a.menu.fa.fa-th-list{href: '#nav'}
      =t('.menu', default: 'Menu')
    %ul
      - site.pages.each do |page|
        %li{ class: (:active if page == @page) }
          = link_to page.name, s_page_path(id: page)
-#
  %nav.navbar.navbar-inverse.navbar-fixed-top{ role: 'navigation' }
    .navbar-header
      %button.navbar-toggle{ 'data-target' => '#nav', 'data-toggle' => 'collapse', type: 'button' }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #nav.navbar-collapse.navbar-no-js.in
      %ul.nav.navbar-nav.main-nav
