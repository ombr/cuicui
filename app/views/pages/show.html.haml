= render 'layouts/nav', site: @site
- if @page.description.present? || @page.description_html.present?
  .col-md-8.images.rotation.col-md-push-4
    - if @image
      = render @image, no_controls: true
  .col-md-4.message.col-md-pull-8
    .description
      .description-width
        = @page.description_rendered.html_safe
        = @page.description_html.html_safe
- else
  - if @image
    = render @image
  - else
    .col-md-12.images
      %h1 Oups, this page is empty...
