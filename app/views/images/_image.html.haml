.image.col-md-12.col-fullscreen
  .viewer
    .content
      = image_tag image.image.url(:full), alt: image.description, title: image.description
      - if image.lower_item
        =link_to s_image_path(page_id: image.page, id: image.lower_item) , class: 'control next preload' do
          %p.fa.fa-angle-right next
      - if image.higher_item
        =link_to s_image_path(page_id: image.page, id: image.higher_item), class: 'control previous preload' do
          %p.fa.fa-angle-left previous
      - if image.higher_items.first
        =link_to s_image_path(page_id: image.page, id: image.higher_items.first) , class: 'control first preload' do
          %p= '<<'
      .image-progress
        %span.position=@image.position
        %span.sep /
        %span.total=@image.page.images.count

  - if @image.description.present?
    .image-description
      = @image.description
